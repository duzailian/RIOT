{
    "editor.rulers": [
        80,
        120
    ],
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.associations": {
        "Makefile.*": "makefile",
        "*.mk": "makefile"
    },
    "[shellscript][c][cpp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[makefile]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
        "clangd.path": "/opt/clangd_15.0.6/bin/clangd",// clangd路径
    "clangd.arguments": ["-log=verbose",
                         "-pretty",
                         "--background-index",
                         "--query-driver=/usr/bin/gcc", // 交叉编译时的编译器路径
                         "--compile-commands-dir=examples/blinky"// compile_commands.json文件所在路径
                         ],
}
